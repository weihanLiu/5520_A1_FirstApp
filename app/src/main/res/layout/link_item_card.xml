<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/logoBlue"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/link_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:text="@string/link_item_name"
            android:textColor="@color/logoPink"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/link_item_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/link_item_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/link_item_url"
            android:textColor="@color/logoYellow" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>